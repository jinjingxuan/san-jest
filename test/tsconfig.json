{
  "compilerOptions": {
    "module": "ESNext",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.san", "test.spec.js"],
  "exclude": ["node_modules", "dist"]
}
